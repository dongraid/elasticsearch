<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<%= form_for(:post, :url => {:action => 'index'}) do |f| %>
    <%= f.text_field(:title) %>
    <%= f.submit 'Search' %>
<% end %>

<% if @posts.empty? %>
  <h2>No posts found matching your query!</h2>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td><%= link_to 'Show', post_path(post.id) %></td>
          <td><%= link_to 'Edit', edit_post_path(post.id) %></td>
          <td><%= link_to 'Destroy', post_path(post.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<br>

<%= link_to 'New Post', new_post_path %>
<%= link_to 'Back', posts_path %>
